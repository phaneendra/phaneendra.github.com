{
  "name": "@phanee.tk/main",
  "private": true,
  "description": "",
  "version": "1.3.0",
  "author": "phaneendra.krishnareddy",
  "devDependencies": {
    "husky": "latest",
    "lerna": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "tslint": "latest",
    "tslint-react": "latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "personal-dev": "cd packages/personal-blog-gatsby && gatsby develop",
    "personal-build": "cd packages/personal-blog-gatsby && gatsby build",
    "personal-serve": "cd packages/personal-blog-gatsby && gatsby serve",
    "build": "lerna run build",
    "clean": "yarn clean:artifacts && yarn clean:packages && yarn clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rm -rf node_modules",
    "docz:dev": "cd packages/components && docz dev",
    "docz:build": "cd packages/components && docz build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --write",
      "git add"
    ]
  }
}
