{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@components": "./src/components",
          "@src": "./src",
          "@theme": "./src/theme",
          "@config": "./config"
        },
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    ],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true
      }
    ],
    ["babel-plugin-macros"]
  ]
}
